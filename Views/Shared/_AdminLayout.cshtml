<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Quản trị Haluwin Blog</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Content/adminassets/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Content/adminassets/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/Content/adminassets/assets/vendors/jvectormap/jquery-jvectormap.css">
    <link rel="stylesheet" href="~/Content/adminassets/assets/vendors/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/Content/adminassets/assets/vendors/owl-carousel-2/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/adminassets/assets/vendors/owl-carousel-2/owl.theme.default.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/Content/adminassets/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="icon" href="~/Content/assets/img/logo/logotitle.png" />
    <style>
        * {
            font-family: monospace;
        }
    </style>
</head>
<body>
    <div class="container-scroller">
        <!-- partial:partials/_sidebar.html -->
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <div class="sidebar-brand-wrapper d-none d-lg-flex align-items-center justify-content-center fixed-top">
                <a class="sidebar-brand brand-logo" href="@Url.Action("Index","Home")"><img src="~/Content/assets/img/logo/HaluwinLogo.png" alt="logo" style="width:200px; height:50px;" /></a>
                <a class="sidebar-brand brand-logo-mini" href="@Url.Action("Index","Home")"><img src="~/Content/assets/img/logo/logotitle.png" alt="logo" style="width: 30px;" /></a>
            </div>
            <ul class="nav">
                <li class="nav-item profile">
                    <div class="profile-desc">
                        <div class="profile-pic">
                            <div class="count-indicator">
                                <img class="img-xs rounded-circle " src="~/Content/assets/img/logo/iconskull.jpg" alt="">
                                <span class="count bg-success"></span>
                            </div>
                            <div class="profile-name">
                                <h3 class="mb-0 font-weight-normal">@Session["NameUser"]</h3>
                                <span>@Session["Email"]</span>
                            </div>
                        </div>

                    </div>
                </li>
                <li class="nav-item nav-category">
                    <span class="nav-link">Hệ thống quản lý</span>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" href="@Url.Action("Index", "Accounts", new {area="Admin"})">
                        <span class="menu-icon">
                            <i class="mdi mdi-account-multiple"></i>
                        </span>
                        <span class="menu-title">Tài khoản</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" href="@Url.Action("Index", "Categories", new { area = "Admin" })">
                        <span class="menu-icon">
                            <i class="mdi mdi-book-variant"></i>
                        </span>
                        <span class="menu-title">Danh mục</span>
                    </a>
                </li>

                <li class="nav-item menu-items">
                    <a class="nav-link" href="@Url.Action("Index", "Products", new {area="Admin"})">
                        <span class="menu-icon">
                            <i class="mdi mdi-transcribe"></i>
                        </span>
                        <span class="menu-title">Sản phẩm</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" href="@Url.Action("Index", "OrderProes", new {area="Admin"})">
                        <span class="menu-icon">
                            <i class="mdi mdi-account-multiple"></i>
                        </span>
                        <span class="menu-title">Đơn hàng</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" data-bs-toggle="collapse" href="#auth" aria-expanded="false" aria-controls="auth">
                        <span class="menu-icon">
                            <i class="mdi mdi-earth"></i>
                        </span>
                        <span class="menu-title">Trang người dùng</span>
                        <i class="menu-arrow"></i>
                    </a>
                    <div class="collapse" id="auth">
                        <ul class="nav flex-column sub-menu">
                            <li class="nav-item"> <a class="nav-link" href="@Url.Action("LogOut", "Accounts")" target="_blank"> Trang chủ </a></li>
                            <li class="nav-item"> <a class="nav-link" href="@Url.Action("LogOut","Accounts")"> Sản phẩm </a></li>
                            <li class="nav-item"> <a class="nav-link" href="@Url.Action("LogOut","Accounts")"> Liên hệ </a></li>
                            <li class="nav-item"> <a class="nav-link" href="@Url.Action("LogOut","Accounts")"> Chúng tôi </a></li>

                        </ul>
                    </div>
                </li>

            </ul>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_navbar.html -->
            <nav class="navbar p-0 fixed-top d-flex flex-row">
                <div class="navbar-brand-wrapper d-flex d-lg-none align-items-center justify-content-center">
                    <a class="navbar-brand brand-logo-mini" href="index.html"><img src="~/Content/adminassets/assets/images/logo-mini.svg" alt="logo" /></a>
                </div>
                <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
                    <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                        <span class="mdi mdi-menu"></span>
                    </button>

                    <ul class="navbar-nav navbar-nav-right">
                        <li class="nav-item dropdown">
                            <a class="nav-link" id="profileDropdown" href="#" data-bs-toggle="dropdown">
                                <div class="navbar-profile">
                                    <img class="img-xs rounded-circle" src="~/Content/assets/img/logo/iconskull.jpg" alt="">
                                    <h2 class="mb-0 d-none d-sm-block navbar-profile-name">@Session["NameUser"]</h2>
                                    <i class="mdi mdi-menu-down d-none d-sm-block"></i>
                                </div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="profileDropdown">
                                <h6 class="p-3 mb-0">Profile</h6>
                                <div class="dropdown-divider"></div>

                                <div class="dropdown-divider"></div>
                                <a href="@Url.Action("LogOut","Accounts")" class="dropdown-item preview-item">
                                    <div class="preview-thumbnail">
                                        <div class="preview-icon bg-dark rounded-circle">
                                            <i class="mdi mdi-logout text-danger"></i>
                                        </div>
                                    </div>
                                    <div class="preview-item-content">
                                        <p class="preview-subject mb-1">Log out</p>
                                    </div>
                                </a>
                                <div class="dropdown-divider"></div>
                            </div>
                        </li>
                    </ul>
                    <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                        <span class="mdi mdi-format-line-spacing"></span>
                    </button>
                </div>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper" style="background-color: #191C24">
                    <div class="container-fluid">
                        @RenderBody()
                    </div>
                </div>
                <!-- content-wrapper ends -->
                <!-- partial:partials/_footer.html -->
                <hr />
                <footer class="footer" style="background-color: #191C24">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted d-block text-center text-sm-left d-sm-inline-block justify-content-center">Copyright © Haluwin Blog @DateTime.Now.Year</span>
                        <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"></span>
                    </div>
                </footer>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <div>
        <script src="~/Content/adminassets/assets/vendors/js/vendor.bundle.base.js"></script>
        <!-- endinject -->
        <!-- Plugin js for this page -->
        <script src="~/Content/adminassets/assets/vendors/chart.js/Chart.min.js"></script>
        <script src="~/Content/adminassets/assets/vendors/progressbar.js/progressbar.min.js"></script>
        <script src="~/Content/adminassets/assets/vendors/jvectormap/jquery-jvectormap.min.js"></script>
        <script src="~/Content/adminassets/assets/vendors/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
        <script src="~/Content/adminassets/assets/vendors/owl-carousel-2/owl.carousel.min.js"></script>
        <script src="~/Content/adminassets/assets/js/jquery.cookie.js" type="text/javascript"></script>
        <!-- End plugin js for this page -->
        <!-- inject:js -->
        <script src="~/Content/adminassets/assets/js/off-canvas.js"></script>
        <script src="~/Content/adminassets/assets/js/hoverable-collapse.js"></script>
        <script src="~/Content/adminassets/assets/js/misc.js"></script>
        <script src="~/Content/adminassets/assets/js/settings.js"></script>
        <script src="~/Content/adminassets/assets/js/todolist.js"></script>
        <!-- endinject -->
        <!-- Custom js for this page -->
        <script src="~/Content/adminassets/assets/js/dashboard.js"></script>
        <!-- End custom js for this page -->
        <script src="~/Scripts/script.js"></script>
    </div>
</body>
</html>