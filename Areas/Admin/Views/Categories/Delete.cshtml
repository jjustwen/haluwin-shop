@model HaluwinShop.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<main>
    <h3 class="text-uppercase" style="font-family:'Times New Roman', Times, serif">
        Xóa danh mục <b style="background-color: darkred; border-style:groove; padding: 3px">@Model.NameCate</b> ?
    </h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.IDCate)
            </dt>

            <dd class="container-fluid">
                @Html.DisplayFor(model => model.IDCate)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.NameCate)
            </dt>

            <dd class="container-fluid">
                @Html.DisplayFor(model => model.NameCate)
            </dd>



        </dl>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions mb-5">
                <input type="submit" value="Xóa" class="text-uppercase btn btn-outline-danger font-monospace" />
            </div>
        }



        <div class="btn btn-outline-secondary">
            <a href="@Url.Action("Index","Categories")" style="text-decoration: none; color: grey">
                <i class="font-monospace">Danh sách các mục</i>
            </a>
        </div>
    </div>
</main>

















