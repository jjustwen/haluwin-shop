@model HaluwinShop.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<main>
    <h3 class="text-uppercase" style="font-family:'Times New Roman', Times, serif">Chỉnh sửa mục</h3>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IDCate)

            <div class="form-group">
                @Html.LabelFor(model => model.NameCate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NameCate, new { htmlAttributes = new { @class = "form-control", style = "color: ghostwhite;" } })
                    @Html.ValidationMessageFor(model => model.NameCate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="text-uppercase btn btn-outline-success font-monospace" />
                </div>
            </div>
        </div>
    }

    <div class="btn btn-outline-secondary">
        <a href="@Url.Action("Index","Categories")" style="text-decoration: none; color: grey">
            <i class="font-monospace">Danh sách các mục</i>
        </a>
    </div>

</main>























