@model HaluwinShop.Models.Product
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>THÊM MỚI SẢN PHẨM</h2>
@using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table class="table-bordered">
        <tr>
            <td>@Html.LabelFor(model => model.NamePro) </td>
            <td>@Html.EditorFor(model => model.NamePro) </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Price)</td>
            <td>@Html.EditorFor(model => model.Price) </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.IDcate)</td>
            <td>
                @{
                    Html.RenderAction("SelectCate", "Products");
                }
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.DecriptionPro)</td>
            <td>@Html.EditorFor(model => model.DecriptionPro)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.ImagePro)</td>
            <td><img src="@Url.Content(Model.ImagePro)" height="150" width="150" id="previewImg" /></td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="file" name="UploadImage" onchange="ChangeImage(this, document.getElementById('previewImg'))" />
                <input type="submit" value="Tạo mới" />
            </td>
        </tr>
    </table>
    <div class="btn btn-outline-secondary m-5">
        <a href="@Url.Action("Index","Products")" style="text-decoration: none; color: grey">
            <i class="font-monospace">Danh sách sản phẩm</i>
        </a>
    </div>
}
